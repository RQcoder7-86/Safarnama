 <style>/* === Minimal Preloader Container === */
/* === Premium Preloader Container === */
#minimal-preloader {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #f2f6ff, #e1eaff);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  transition: opacity 0.8s ease, visibility 0.8s;
}

/* === Glowing Spinner === */
.glow-spinner {
  width: 16px;
  height: 16px;
  border: 4px solid transparent;
  border-top: 4px solid #007BFF;
  border-radius: 50%;
  animation: spin 1.2s linear infinite, glow 1.5s ease-in-out infinite;
  box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
}

@keyframes spin {
  0%   { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes glow {
  0%, 100% { box-shadow: 0 0 10px rgba(0, 123, 255, 0.4); }
  50%      { box-shadow: 0 0 20px rgba(0, 123, 255, 0.9); }
}

/* === Text Style === */
.loader-text {
  margin-top: 16px;
  font-family: 'Poppins', sans-serif;
  color: #333;
  font-size: 16px;
  letter-spacing: 0.5px;
  opacity: 0.85;
  animation: fadeInText 1.5s ease-in-out;
}

@keyframes fadeInText {
  0% { opacity: 0; transform: translateY(10px); }
  100% { opacity: 0.85; transform: translateY(0); }
}

</style>
<div id="minimal-preloader">
  <div class="glow-spinner"></div>
  <p class="loader-text">Preparing your journey...</p>
</div>


<script>
window.addEventListener("load", () => {
  const miniLoader = document.getElementById("minimal-preloader");
  if (miniLoader) {
    setTimeout(() => {
      miniLoader.style.opacity = "0";
      miniLoader.style.visibility = "hidden";
    }, 2000); // adjust as needed
  }
});
</script>
